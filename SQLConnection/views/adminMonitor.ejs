<div  class="col-sm-3">
    <form id="SubmitDates" method="POST" enctype="/AdminMonitor">
        <div class="form-group">
            <h3>Request</h3>
            <label for="from">Date from:</label>
            <input type="date" class="form-control" id="from"  name="from">
        </div>
        <div class="form-group">
            <label for="to">Date to:</label>
            <input type="date" class="form-control" id="to"  name="to">
        </div>

        <div class="form-group">
            <h3>Feedback</h3>
            <label for="fromF">Date from:</label>
            <input type="date" class="form-control" id="fromF"  name="fromF">
        </div>
        <div class="form-group">
            <label for="toF">Date to:</label>
            <input type="date" class="form-control" id="toF"  name="toF">
        </div>

        <button type="submit" value="submit" class="btn btn-default">Submit</button>
    </form>
</div>


